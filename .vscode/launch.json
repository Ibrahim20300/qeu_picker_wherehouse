{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Flutter Web (no CORS)",
      "request": "launch",
      "type": "dart",
      "args": [
        "--web-browser-flag",
        "--disable-web-security",
        "--web-browser-flag",
        "--user-data-dir=/tmp/flutter-chrome"
      ],
      "toolArgs": [
        "--web-port=3000",
        "--web-launch-url=http://localhost:3000",
        "--dart-define=BASE_URL=http://localhost:3000"
      ]
    },
    {
      "name": "Flutter Mobile",
      "request": "launch",
      "type": "dart"
    }
  ]
}
